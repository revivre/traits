<%= form_for(@work_time) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :user_id, class: 'form-control' %>
    <%= f.label :work_date, class: 'control-label' %>
    <div class='input-group date' id='datetimepicker_date'>
      <%= f.text_field :work_date, class: 'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
    <%= f.label :start_time, class: 'control-label' %>
    <div class='input-group date' id='datetimepicker_start'>
      <%= f.text_field :start_time, class: 'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-time"></span>
      </span>
    </div>
    <%= f.label :end_time, class: 'control-label' %>
    <div class='input-group date' id='datetimepicker_end'>
      <%= f.text_field :end_time, class: 'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-time"></span>
      </span>
    </div>
    <%= f.label :late, class: 'control-label' %>
    <%= f.select :late, options_for_select(@late_enum.collect { |h| [h[0], h[1]] }, selected: @work_time.late), {} , class: 'form-control' %>
    <%= f.label :leave, class: 'control-label' %>
    <%= f.select :leave, options_for_select(@leave_enum.collect { |h| [h[0], h[1]] }, selected: @work_time.leave), {} , class: 'form-control' %>
    <%= f.label :holiday, class: 'control-label' %>
    <%= f.select :holiday, options_for_select(@holiday_enum.collect { |h| [h[0], h[1]] }, selected: @work_time.holiday_enum), {} , class: 'form-control' %>
    <%= f.label :note, class: 'control-label' %>
    <%= f.text_field :note, class: 'form-control' %>
    <div class="col-xs-1">
      <div class="btn-group">
        <%= f.submit '登録', class: 'btn btn-primary btn-xs' %>
      </div>
    </div>
    <div class="col-xs-10">
    </div>
    <div class="col-xs-1">
      <div class="btn-group">
        <%= link_to '削除',
          @work_time,
          method: :delete,
          class: "btn btn-danger btn-xs" %>
      </div>
    </div>
  </div>
<% end %>
